{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Wrapper for Amsterdam registration card",
    "type": "object",
    "properties": {
      "record_id": { "type": "string" },
      "_url": { "type": "string", "format": "uri" },
      "validated": { "type": "boolean" },
      "validated_json": {
        "$ref": "#/definitions/CardContent"
      }
    },
    "required": ["record_id", "_url", "validated"],
    "definitions": {
      "CardContent": {
        "type": "object",
        "properties": {
          "main_entries": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": { "type": "string", "pattern": "^[0-9]{6}$" },
                "address": { "type": "string" }
              },
              "required": ["date", "address"]
            }
          }
        },
        "required": ["main_entries"]
      }
    }
  }
